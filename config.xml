    <shop name="EsmokingSpain" country="spain" currency="EUR">
        <baseUri>https://www.esmokingspain.es</baseUri>
        <uriRemoveStringAfter>osCsid=</uriRemoveStringAfter>
        <!--<pricePlus>1.21</pricePlus>-->
        <find>
            <product>//div[@class='product-item']</product>
            <name>.//div[@class='body']/div[@class='title']/a</name>
            <price>.//div[@class='prices']/div[contains(@class, 'price-current')]</price>
            <uri>.//div[@class='body']/div[@class='title']/a</uri>
            <special>.//div[@class='prices']/div[@class='price-prev']</special>
            <specialPrice>.//div[@class='prices']/div[contains(@class, 'name product-title')]</specialPrice>
            <noStock>.//span[contains(@class, 'availability-list-out-of-stock')]</noStock>
            <hasReviews>.//div[@class='iqitreviews-simple']</hasReviews>
            <!-- Product Page -->
            <pPComments>//div[@class='comment' and @itemprop='reviewBody']</pPComments>            
        </find>
        <remove>10ml</remove>
        <remove>20ml</remove>
        <remove>Aroma</remove>
        <remove>Orgánico</remove>
        <removeRegex>\(.*\)</removeRegex>
        
